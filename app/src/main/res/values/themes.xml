<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ETour" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#006497</item>
        <item name="colorPrimaryVariant">#CCE5FF</item>
        <item name="colorPrimaryContainer">#CCE5FF</item>
        <item name="colorOnPrimaryContainer">#001E31</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#001E31</item>
        <item name="colorSecondaryVariant">#D4E4F6</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#D4E4F6</item>
        <item name="colorOnSecondaryContainer">@color/blue_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="background">@color/white</item>
        <item name="textFillColor">@color/blue_dark</item>
        <item name="strokeColor">@color/blue_dark</item>
        <!-- Customize your theme here. -->
        <item name="colorTertiary">#66587B</item>
        <item name="colorOnTertiary">#FFFFFF</item>
        <item name="colorTertiaryContainer">#EDDCFF</item>
        <item name="colorOnTertiaryContainer">#221534</item>

        <item name="colorOnSurface">@color/blue_dark</item>
        <item name="colorOnSurfaceVariant">@color/placeholder</item>

        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.ETour.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ETour.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ETour.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ratingbar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/rating_placeholder</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="ratingbar_route_preview" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/orange_white</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="cardButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>
</resources>