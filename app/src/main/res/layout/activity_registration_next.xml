<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.RegistrationNextActivity">

    <data>

        <import type="androidx.databinding.Observable" />

        <variable
            name="viewModel"
            type="com.teamone.e_tour.activities.AuthenticationActivity.AuthenticationInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingTop="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/chevron_left"
                android:src="@drawable/chevron_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sign in"
                android:textSize="36sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:gravity="center"
            android:text="@string/please_set_up_some_basic_information"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="25dp"
            android:hint="@string/username_label"
            android:textColorHint="?colorOnPrimary"
            app:boxBackgroundColor="?colorOnPrimaryContainer"
            app:hintTextColor="?colorOnPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="@={viewModel.username}"
                android:textColor="?colorOnPrimary"
                android:textCursorDrawable="@null" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_label"
            android:textColorHint="?colorOnPrimary"
            app:boxBackgroundColor="?colorOnPrimaryContainer"
            app:endIconMode="password_toggle"
            app:endIconTint="?colorOnPrimary"
            app:hintTextColor="?colorOnPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="@={viewModel.password}"
                android:textColor="?colorOnPrimary"
                android:textCursorDrawable="@null" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="@string/confirm_password_label"
            android:textColorHint="?colorOnPrimary"
            app:boxBackgroundColor="?colorOnPrimaryContainer"
            app:endIconMode="password_toggle"
            app:endIconTint="?colorOnPrimary"
            app:hintTextColor="?colorOnPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="@={viewModel.password}"
                android:textColor="?colorOnPrimary"
                android:textCursorDrawable="@null" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/primary_40"
            android:onClick="@{() -> viewModel.onSignIn()}"
            android:paddingVertical="8dp"
            android:text="@string/signin_button_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</layout>