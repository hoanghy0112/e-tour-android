<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange_white"
    app:cardBackgroundColor="@color/orange_white"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="15dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/info"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/orange_white"
            android:paddingHorizontal="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/tour_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour name"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tour_description"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour description"
                android:textColor="@color/placeholder"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/depart_at"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="8:00 AM - 06/05/2023"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tour_type"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tour_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Promotion"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/view_detail_information_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_marginTop="10dp"
                android:layout_marginStart="-10dp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/view_detail_information"/>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/info"
            app:dividerThickness="1dp"
            app:dividerColor="@color/blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:background="@color/orange_white"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="VND 950.000"
                android:textColor="@color/orange"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <Button
                android:id="@+id/book_ticket_btn"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="20dp"
                android:textSize="13sp"
                android:text="@string/book_ticket"
                android:textAllCaps="false" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
